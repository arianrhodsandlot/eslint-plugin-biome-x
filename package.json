{
  "name": "eslint-plugin-biome-x",
  "description": "An ESLint plugin to integrate Biome into ESLint",
  "keywords": [
    "biome",
    "biomejs",
    "eslint-config",
    "eslint-plugin",
    "eslint",
    "eslintplugin"
  ],
  "license": "MIT",
  "author": {
    "name": "arianrhodsandlot",
    "email": "theguidanceofawhitetower@gmail.com"
  },
  "type": "module",
  "exports": {
    "types": "./dist/types/index.d.ts",
    "import": "./dist/eslint-plugin-biome-x.mjs",
    "require": "./dist/eslint-plugin-biome-x.cjs"
  },
  "main": "dist/eslint-plugin-biome-x.cjs",
  "module": "dist/eslint-plugin-biome-x.mjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "conc npm:build:* -c auto",
    "build:cjs": "node --run=esbuild -- --outfile=dist/eslint-plugin-biome-x.cjs",
    "build:esm": "node --run=esbuild -- --format=esm --outfile=dist/eslint-plugin-biome-x.mjs",
    "build:types": "tsc --project tsconfig.src.json",
    "dev": "conc npm:dev:* -c auto",
    "dev:cjs": "node --run=build:cjs -- --watch",
    "dev:esm": "node --run=build:esm -- --watch",
    "esbuild": "esbuild src/index.ts --bundle --platform=node --packages=external --target=node18 --minify",
    "prepare": "simple-git-hooks",
    "test": "conc npm:test:* -c auto",
    "test:e2e": "node --no-warnings --experimental-strip-types --test tests/e2e/**/*.test.ts",
    "test:unit": "node --no-warnings --experimental-strip-types --test tests/unit/**/*.test.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.?(m|c)@(j|t)s?(x)": "eslint --fix",
    "package.json": "pnpm dlx sort-package-json"
  },
  "dependencies": {
    "@biomejs/js-api": "0.7.1",
    "@biomejs/wasm-nodejs": "1.9.4",
    "cosmiconfig": "9.0.0",
    "es-toolkit": "1.31.0",
    "eslint-config-prettier": "9.1.0",
    "prettier-linter-helpers": "1.0.0",
    "synckit": "0.9.2"
  },
  "devDependencies": {
    "@arianrhodsandlot/eslint-config": "0.16.4",
    "@arianrhodsandlot/release-kit": "0.1.4",
    "@tsconfig/node-lts": "22.0.1",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/node": "22.10.5",
    "concurrently": "9.1.2",
    "esbuild": "0.24.2",
    "eslint": "9.17.0",
    "eslint-plugin-eslint-plugin": "6.4.0",
    "lint-staged": "15.3.0",
    "prettier": "3.4.2",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.7.2",
    "zx": "8.3.0"
  },
  "packageManager": "pnpm@9.15.3"
}
